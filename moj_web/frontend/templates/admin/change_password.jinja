{% extends "_main.jinja" %}

{% block title %} Login {% endblock %}

{% block main %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col col-10 col-md-6 change_password">
            <h3 class="text-center"> Change your password </h3>
            <form action="{{url_for("admin.change_password")}}", method=post>
                {{ form.csrf_token }}
                <div class="form-group">
                    {{ form.old_password.label }}
                    {{ form.old_password(size=20, class="form-control") }}
                </div>
                <div class="form-group">
                    {{ form.new_password.label }} 
                    {{ form.new_password(class="form-control") }}
                </div>
                <button type="submit" class="btn btn-danger change_pw_btn"> SAVE CHANGES </button>
            </form>
        </div> {# col 6 #}
    </div> {# row #}
</div> {# container #}
{% endblock %}